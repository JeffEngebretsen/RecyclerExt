<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clipChildren="false"
                tools:ignore="UseCompoundDrawables">

    <com.devbrackets.android.recyclerext.widget.PositionSupportTextView
        android:id="@+id/recyclerext_fast_scroll_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/recyclerext_fast_scroll_bubble"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="@dimen/recyclerext_default_fast_scroll_bubble_text_size"
        android:visibility="visible"
        tools:ignore="RtlHardcoded"
        tools:text="A"/>

    <com.devbrackets.android.recyclerext.widget.PositionSupportImageView
        android:id="@+id/recyclerext_fast_scroll_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:background="@drawable/recyclerext_fast_scroll_handle"
        tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"/>
</RelativeLayout>